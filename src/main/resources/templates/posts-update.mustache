{{>layout/header}}

<h1>게시글수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글번호</label>
                <input type="text" readonly class="form-control" id="id" value="{{posts.id}}">
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text"  class="form-control" id="title" value="{{posts.title}}">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" readonly class="form-control" id="author" value="{{posts.author}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea type="text"  class="form-control" id="content" >{{posts.content}}</textarea>
            </div>
        </form>
        <a class="btn btn-secondary" role="button" href="/">취소</a>
        <button type="button" id="btn-update" class="btn btn-primary">수정</button>
        <button type="button" id="btn-delete" class="btn btn-danger">삭제</button>
    </div>
</div>
{{>layout/footer}}